# Environnement d'exécution (development, production, test)
NODE_ENV=development

# Configuration du serveur
PORT=5000
HOST=localhost

# Configuration MongoDB
MONGO_URI=mongodb://localhost:27017/cyberthreat-atlas

# Configuration JWT (authentification)
JWT_SECRET=change-this-to-a-secure-secret-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Niveau de logging (debug, info, warn, error)
LOG_LEVEL=info
LOG_FORMAT=dev

# Clés API (services externes)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SHODAN_API_KEY=your-shodan-api-key
ALIENVAULT_API_KEY=your-alienvault-api-key

# Configuration des tâches planifiées (cron)
UPDATE_MITRE_CRON=0 0 * * * # Tous les jours à minuit
FETCH_THREAT_INTEL_CRON=0 */6 * * * # Toutes les 6 heures